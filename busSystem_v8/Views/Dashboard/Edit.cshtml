@model busSystem_v8.Models.User


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger " })
        @Html.HiddenFor(model => model.UserID)
    <div class="form-group">
            @Html.LabelFor(model => model.wallet, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.wallet, new { htmlAttributes = new { @class = "form-control " } })
                @Html.ValidationMessageFor(model => model.wallet, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
